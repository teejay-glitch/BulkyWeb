@model Company

<div class="card shadow border-0 mat-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class=" col-12 text-center">
                <h2 class="text-primary">@(Model.Id == 0 ? "Create" : "Update") Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden/>
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*  <div asp-validation-summary="ModelOnly"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" type="text" class=" form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="StreetAddress" type="text" class=" form-control border-0 shadow" />
                            <label asp-for="StreetAddress" class="ms-2"></label>
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <input asp-for="City" type="text" class=" form-control border-0 shadow" />
                            <label asp-for="City" class="ms-2 text-muted"></label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="State" type="text" class=" form-control border-0 shadow" />
                            <label asp-for="State" class="ms-2"></label>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PostalCode" type="text" class=" form-control border-0 shadow" />
                            <label asp-for="PostalCode" class="ms-2"></label>
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PhoneNumber" type="text" class=" form-control border-0 shadow" />
                            <label asp-for="PhoneNumber" class="ms-2"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>                        
                        <div class="row pt-2">
                            <div class="col-6">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control" style="width:150px">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control" style="width:150px">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary form-control" style="width:150px">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>                
            </div>            
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

